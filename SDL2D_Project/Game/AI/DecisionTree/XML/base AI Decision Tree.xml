<?xml version="1.0" encoding="utf-8"?>
<!--My condition tree-->
<decisionTree>
  <move>
    <!--Test is a child of move-->
    <test> is enemy Visible? </test>
    <!--false is a child of move-->
      <false>
        <!--action is a child of false-->
        <action>STEER</action>
      </false>
    <!--true is a child of move-->
    <true>
      <!--test is a child of true-->
      <test> is enemy 5m away?</test>
      <false>
        <!--action is a child of false-->
        <action>PATHFIND</action>
      </false>
      <true>
        <!--action is a child of true-->
        <action>STEER</action>
      </true>
    </true>
  </move>
</decisionTree>